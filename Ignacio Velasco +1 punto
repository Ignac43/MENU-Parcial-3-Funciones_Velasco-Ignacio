#include <iostream>
using namespace std;

void invertirNumero();
void verificarPrimo();
void promedioventas();
int esprimo(int numero);
void cargar(float vec[], int n);
void mostrar(float vec[], int n);

int main() {
    int opcion;
    do {
        cout << "\n=====MENU====" << endl;
        cout << "1. Invertir un numero entero" << endl;
        cout << "2. Verificar si un numero es primo" << endl;
        cout << "3. Calcular promedio, mayor y menor de ventas" << endl;
        cout << "4. Salir" << endl;
        cout << "Seleccionar una opcion: ";
        cin >> opcion;
        switch (opcion) {
        case 1: invertirNumero();
            break; 
        case 2: verificarPrimo();
            break;
        case 3: promedioventas();
            break;
        case 4: cout << "Salimos del programa" << endl;
            break;
        default: 
            cout << "Opcion invalida. Intente nuevamente" << endl;
        }
    } while (opcion != 4);

    return 0;
}

// Ejercicio 1:
void invertirNumero() {

    int numero, inverso = 0;
    cout << "\nIngrese un numero entero: ";
    cin >> numero;

    int aux = numero;
    while (aux != 0) {
        int digito = aux % 10;
        inverso = inverso * 10 + digito;
        aux = aux / 10;
    }
    cout << "Numero original: " << numero << "-->Inverso: " << inverso << endl;
}

// Ejercicio 2: 
void verificarPrimo() {
    int num;
    cout << "\nIngrese un numero entero: ";
    cin >> num;

    if (esprimo(num) == 1)
        cout << num << "Es un numero primo" << endl;
    else
        cout << num << "No es numero primo" << endl;
}
int esprimo(int numero) {
    if (numero <= 1)
        return 0;
    for (int i = 2; i * i <= numero; i++) {
        if (numero % i == 0)
            return 0;
    }
    return 1;
}


// Ejercicio 3: 
void promedioventas() {

    int n;
    cout << "\nIngrese el numero de empleados: ";
    cin >> n;
    float* ventas = new float[n];
    float suma = 0, mayor, menor;
    cargar(ventas, n);
    cout << "\n----Ventas registradas---";
    mostrar(ventas, n);

    suma = 0;
    for (int i = 0; i < n; i++)
        suma += ventas[i];

    mayor = ventas[0];
    menor = ventas[0];

    for (int i = 1; i < n; i++) {
        if (ventas[i] > mayor)
            mayor = ventas[i];
        if (ventas[i] < menor)
            menor = ventas[i];
    }
    cout << "n\----Resultados---" << endl;
    cout << "Promedio general de ventas: " << endl;
    cout << "Monto mayor: " << mayor << endl;
    cout << "Monto menor: " << menor << endl;

    delete[] ventas;
}

// FUNCIONES CARHAR Y MOSTRAR VECTOR
void cargar(float vec[], int n) {

    for (int i = 0; i<n;i++) {
        cout<< "venta del empleado "<<i + 1 << ": ";
        cin >> vec[i];
    }
}
void mostrar(float vec[], int n) {
    for (int i = 0; i < n; i++) {
        cout << "empelado " << i + 1 << "---> Ventas: " << vec[i] << endl;
    }
}
